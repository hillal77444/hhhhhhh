<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- الخلفية الدائرية -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E3F2FD" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <!-- حدود دائرية -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/primary" />
        </shape>
    </item>
    <!-- الأيقونة -->
    <item
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp">
        <bitmap
            android:src="@drawable/ic_contacts"
            android:tint="@color/primary" />
    </item>
</layer-list> 