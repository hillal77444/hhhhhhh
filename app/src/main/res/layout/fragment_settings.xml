<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- النسخ الاحتياطي -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_backup"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAutoBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_auto_backup"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBackupNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_backup_now"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_restore"
            android:layout_marginBottom="24dp"/>

        <!-- المزامنة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_sync"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAutoSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_auto_sync"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSyncNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_sync_now"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fetchDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جلب البيانات من السيرفر"
            android:layout_marginBottom="24dp"/>

        <!-- الأمان -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_security"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchEncryption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_encryption"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/sync_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مزامنة الآن"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/fetch_data_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جلب البيانات من السيرفر"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView> 