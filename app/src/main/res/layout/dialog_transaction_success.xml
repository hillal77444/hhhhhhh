<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/successTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تم حفظ المعاملة بنجاح"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSendWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إرسال إشعار واتساب"
        android:drawableStart="@android:drawable/ic_menu_send"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSendSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إرسال رسالة نصية"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAddAnother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إضافة قيد جديد لنفس العميل"
        android:drawableStart="@android:drawable/ic_input_add"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="خروج"
        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
        android:textColor="@android:color/holo_red_dark" />

</LinearLayout> 