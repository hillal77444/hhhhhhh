<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/bottom_nav_height">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Section with User Info and Balance -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/topSectionCard"
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:background="@drawable/gradient_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <!-- User Info Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="مرحباً"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/white"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/userNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/_20ssp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="أحمد محمد" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editProfileButton"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تعديل"
                            android:textSize="@dimen/_12ssp"
                            android:minHeight="@dimen/_40sdp"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:textColor="@color/white"
                            app:icon="@drawable/ic_edit"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/_4sdp"
                            app:iconSize="@dimen/_18sdp"
                            app:iconTint="@color/white"
                            app:strokeColor="@color/white"
                            app:cornerRadius="@dimen/_20sdp" />

                    </LinearLayout>

                    <!-- Balance Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_16sdp"
                        app:cardElevation="@dimen/_4sdp"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="الرصيد الحالي"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="?attr/colorOnSurface"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/totalBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="285,354"
                                android:textSize="@dimen/_24ssp"
                                android:textColor="@color/primary"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_8sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Summary Cards -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/summaryCardsContainer"
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/topSectionCard"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ملخص الحسابات"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_16sdp"/>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:justifyContent="space_between">

                        <!-- Account Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            app:layout_flexBasisPercent="48%"
                            app:cardBackgroundColor="@color/credit_background"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="0dp"
                            android:stateListAnimator="@animator/card_state_list_anim">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_12sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="@dimen/_24sdp"
                                        android:src="@drawable/ic_arrow_upward"
                                        app:tint="@color/debit_color" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="حساب"
                                        android:textColor="@color/debit_color"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold"
                                        android:layout_marginStart="@dimen/_8sdp" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/totalAccounts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24"
                                    android:textColor="@color/debit_color"
                                    android:textSize="@dimen/_20ssp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_8sdp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Creditors Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            app:layout_flexBasisPercent="48%"
                            app:cardBackgroundColor="@color/credit_background"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="0dp"
                            android:stateListAnimator="@animator/card_state_list_anim">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_12sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="@dimen/_24sdp"
                                        android:src="@drawable/ic_arrow_upward"
                                        app:tint="@color/debit_color" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="لكم"
                                        android:textColor="@color/debit_color"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold"
                                        android:layout_marginStart="@dimen/_8sdp" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/totalCreditors"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4,394,162"
                                    android:textColor="@color/debit_color"
                                    android:textSize="@dimen/_20ssp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_8sdp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Debtors Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            app:layout_flexBasisPercent="48%"
                            app:cardBackgroundColor="@color/debit_background"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="0dp"
                            android:stateListAnimator="@animator/card_state_list_anim">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_12sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="@dimen/_24sdp"
                                        android:src="@drawable/ic_arrow_downward"
                                        app:tint="@color/credit_color" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="عليكم"
                                        android:textColor="@color/credit_color"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold"
                                        android:layout_marginStart="@dimen/_8sdp" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/totalDebtors"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4,108,808"
                                    android:textColor="@color/credit_color"
                                    android:textSize="@dimen/_20ssp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_8sdp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </com.google.android.flexbox.FlexboxLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quickActionsCard"
                style="@style/Widget.App.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/summaryCardsContainer"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="إجراءات سريعة"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_16sdp"/>

                    <!-- Transactions Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/transactionsButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="@string/transactions"
                        android:textSize="@dimen/_14ssp"
                        android:minHeight="@dimen/_48sdp"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_transactions"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_8sdp"
                        app:iconSize="@dimen/_20sdp"
                        app:iconTint="@color/primary"
                        app:strokeColor="@color/primary"
                        app:cornerRadius="@dimen/_12sdp" />

                    <!-- Accounts Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/accountsButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="@string/accounts"
                        android:textSize="@dimen/_14ssp"
                        android:minHeight="@dimen/_48sdp"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:textColor="@color/secondary"
                        app:icon="@drawable/ic_accounts"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_8sdp"
                        app:iconSize="@dimen/_20sdp"
                        app:iconTint="@color/secondary"
                        app:strokeColor="@color/secondary"
                        app:cornerRadius="@dimen/_12sdp" />

                    <!-- Summary Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewSummaryButton"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="متابعة الديون"
                        android:textSize="@dimen/_14ssp"
                        android:minHeight="@dimen/_48sdp"
                        android:paddingHorizontal="@dimen/_16sdp"
                        app:cornerRadius="@dimen/_12sdp"
                        app:icon="@drawable/ic_summary"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/_8sdp"
                        app:iconSize="@dimen/_20sdp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_88sdp"
        android:text="إضافة قيد"
        android:textSize="@dimen/_14ssp"
        android:minHeight="@dimen/_52sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        app:icon="@drawable/ic_add"
        app:iconSize="@dimen/_24sdp"
        app:iconTint="@color/on_primary"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:fabCustomSize="@dimen/_56sdp"
        app:elevation="@dimen/_6sdp"
        app:cornerRadius="@dimen/_16sdp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>