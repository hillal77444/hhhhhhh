<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- شريط معلومات المستخدم -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/userInfoCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dashboard_card_margin"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="0dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:minHeight="72dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/userInfoContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/editProfileButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مرحباً"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/text_secondary"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="18sp"
                            android:autoSizeStepGranularity="1sp" />

                        <TextView
                            android:id="@+id/userNameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="@color/text_primary"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="أحمد محمد"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="22sp"
                            android:autoSizeStepGranularity="2sp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/editProfileButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تعديل"
                        android:textSize="12sp"
                        android:minHeight="40dp"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_edit"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp"
                        app:strokeColor="@color/primary_blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة التقارير -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reportsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dashboard_card_margin"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="0dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/userInfoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95">

                <GridLayout
                    android:id="@+id/statsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:padding="@dimen/dashboard_card_padding"
                    android:useDefaultMargins="true">

                    <!-- مربع حساب -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#E8F5E9"
                        android:padding="@dimen/dashboard_card_padding"
                        android:minHeight="@dimen/dashboard_stat_min_height"
                        android:layout_margin="@dimen/dashboard_stat_box_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="حساب"
                            android:textColor="#1B5E20"
                            android:textStyle="bold"
                            android:textSize="@dimen/dashboard_stat_text_size"
                            android:layout_marginBottom="4dp" />

                        <ImageView
                            android:layout_width="@dimen/dashboard_stat_icon_size"
                            android:layout_height="@dimen/dashboard_stat_icon_size"
                            android:src="@drawable/ic_arrow_upward"
                            android:tint="#1B5E20"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/totalAccounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textColor="#1B5E20"
                            android:textSize="@dimen/dashboard_stat_value_size"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="@dimen/dashboard_stat_value_size"
                            android:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                    <!-- مربع لكم -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#E3F2FD"
                        android:padding="@dimen/dashboard_card_padding"
                        android:minHeight="@dimen/dashboard_stat_min_height"
                        android:layout_margin="@dimen/dashboard_stat_box_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="لكم"
                            android:textColor="#0D47A1"
                            android:textStyle="bold"
                            android:textSize="@dimen/dashboard_stat_text_size"
                            android:layout_marginBottom="4dp" />

                        <ImageView
                            android:layout_width="@dimen/dashboard_stat_icon_size"
                            android:layout_height="@dimen/dashboard_stat_icon_size"
                            android:src="@drawable/ic_arrow_upward"
                            android:tint="#0D47A1"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/totalCreditors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4,394,162"
                            android:textColor="#0D47A1"
                            android:textSize="@dimen/dashboard_stat_value_size"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="@dimen/dashboard_stat_value_size"
                            android:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                    <!-- مربع عليكم -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#FFEBEE"
                        android:padding="@dimen/dashboard_card_padding"
                        android:minHeight="@dimen/dashboard_stat_min_height"
                        android:layout_margin="@dimen/dashboard_stat_box_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="عليكم"
                            android:textColor="#B71C1C"
                            android:textStyle="bold"
                            android:textSize="@dimen/dashboard_stat_text_size"
                            android:layout_marginBottom="4dp" />

                        <ImageView
                            android:layout_width="@dimen/dashboard_stat_icon_size"
                            android:layout_height="@dimen/dashboard_stat_icon_size"
                            android:src="@drawable/ic_arrow_downward"
                            android:tint="#B71C1C"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/totalDebtors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4,108,808"
                            android:textColor="#B71C1C"
                            android:textSize="@dimen/dashboard_stat_value_size"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="@dimen/dashboard_stat_value_size"
                            android:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                    <!-- مربع الرصيد -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#F3E5F5"
                        android:padding="@dimen/dashboard_card_padding"
                        android:minHeight="@dimen/dashboard_stat_min_height"
                        android:layout_margin="@dimen/dashboard_stat_box_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الرصيد"
                            android:textColor="#4A148C"
                            android:textStyle="bold"
                            android:textSize="@dimen/dashboard_stat_text_size"
                            android:layout_marginBottom="4dp" />

                        <ImageView
                            android:layout_width="@dimen/dashboard_stat_icon_size"
                            android:layout_height="@dimen/dashboard_stat_icon_size"
                            android:src="@drawable/ic_arrow_upward"
                            android:tint="#4A148C"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/totalBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="285,354"
                            android:textColor="#4A148C"
                            android:textSize="@dimen/dashboard_stat_value_size"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="@dimen/dashboard_stat_value_size"
                            android:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة القيود المحاسبية -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/transactionsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="0dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/reportsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:minHeight="72dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/transactionsIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:padding="8dp"
                        android:src="@drawable/ic_transactions"
                        app:tint="@color/primary_blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <LinearLayout
                        android:id="@+id/transactionsInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/transactionsIcon"
                        app:layout_constraintEnd_toStartOf="@id/viewTransactionsButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transactions"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="@color/primary_blue"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeStepGranularity="1sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إدارة القيود المحاسبية"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="14sp"
                            android:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewTransactionsButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_transactions"
                        android:textColor="@color/primary_blue"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة الحسابات -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accountsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="@dimen/dashboard_card_radius"
                app:cardElevation="0dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/transactionsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95"
                android:minHeight="72dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/accountsIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:padding="8dp"
                        android:src="@drawable/ic_accounts"
                        app:tint="@color/accent_green"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <LinearLayout
                        android:id="@+id/accountsInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/accountsIcon"
                        app:layout_constraintEnd_toStartOf="@id/viewAccountsButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/accounts"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="@color/accent_green"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeStepGranularity="1sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إدارة الحسابات"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="14sp"
                            android:autoSizeStepGranularity="1sp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewAccountsButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_accounts"
                        android:textColor="@color/accent_green"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- زر متابعة الديون -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewSummaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="متابعة الديون"
                android:textSize="14sp"
                android:minHeight="@dimen/dashboard_button_height"
                app:cornerRadius="@dimen/dashboard_button_radius"
                app:icon="@drawable/ic_summary"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:layout_constraintTop_toBottomOf="@id/accountsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.95" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- زر إضافة معاملة جديدة -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/dashboard_fab_margin"
        android:layout_marginBottom="@dimen/dashboard_fab_bottom"
        android:contentDescription="إضافة معاملة جديدة"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@color/primary_blue"
        app:tint="@android:color/white"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
