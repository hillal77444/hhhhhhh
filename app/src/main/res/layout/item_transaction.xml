<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="#E3E8FD"
    app:cardBackgroundColor="#FFFFFF"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:stateListAnimator="@animator/card_state_list_anim"
    android:tag="transaction_card">

    <LinearLayout
        android:id="@+id/innerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_inner_background_default">

        <!-- صف العنوان والمبلغ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- معلومات الحساب -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accountNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#152FD9"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    tools:text="اسم الحساب" />

                <TextView
                    android:id="@+id/transactionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:fontFamily="sans-serif"
                    tools:text="2024/03/20" />

            </LinearLayout>

            <!-- المبلغ -->
            <TextView
                android:id="@+id/transactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@drawable/transaction_amount_text_color"
                android:fontFamily="sans-serif-medium"
                tools:text="1,000,000 ريال" />

        </LinearLayout>

        <!-- خط فاصل -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E8FD"
            android:layout_marginHorizontal="16dp" />

        <!-- صف الوصف -->
        <TextView
            android:id="@+id/transactionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:textColor="#666"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            tools:text="وصف القيد المحاسبي" />

        <!-- صف الأزرار -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <!-- زر واتساب -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/whatsappButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:text="واتساب"
                android:textSize="12sp"
                app:icon="@drawable/ic_whatsapp"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:iconTint="#25D366"
                app:strokeColor="#25D366"
                app:strokeWidth="1dp"
                app:cornerRadius="22dp"
                android:textColor="#25D366" />

            <!-- زر تعديل -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:text="تعديل"
                android:textSize="12sp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:iconTint="#152FD9"
                app:strokeColor="#152FD9"
                app:strokeWidth="1dp"
                app:cornerRadius="22dp"
                android:textColor="#152FD9" />

            <!-- زر حذف -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="حذف"
                android:textSize="12sp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:iconTint="#FF5252"
                app:strokeColor="#FF5252"
                app:strokeWidth="1dp"
                app:cornerRadius="22dp"
                android:textColor="#FF5252" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
